<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cine.Views.DetallesPeliculaView" Title="Detalles de la película" Background="black">
    <StackLayout VerticalOptions="Center" Background="lightgray">
        <Label TextColor="LightBlue" Padding="10" FontSize="30" HorizontalOptions="Center"  Text="{Binding  Titulo}"></Label>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Padding="20" TextColor="LightBlue"  FontSize="30" HorizontalOptions="Center"  Text="{Binding  Año}"></Label>
            <Label Grid.Column="1" Padding="20" TextColor="LightBlue"  FontSize="30" HorizontalOptions="Center"  Text="-"></Label>
            <Label Grid.Column="2" Padding="20" TextColor="LightBlue"  FontSize="30" HorizontalOptions="Center" Text="{Binding  Genero}"></Label>
        </Grid>
        
        <Label TextColor="LightBlue" Padding="20" FontSize="30" HorizontalOptions="Center" Text="{Binding  Productora}"></Label>
        <Label TextColor="LightBlue"  FontSize="30" HorizontalOptions="Center" Text="{Binding  Director}"></Label>
    </StackLayout>
</ContentPage>